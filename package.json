{
	"name": "vscode-live2d",
	"displayName": "vscode-live2d",
	"description": "vscode看板娘",
	"version": "0.1.0",
	"publisher": "CharlesZ",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CharlesZhang6/vscode-live2d.git"
	},
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"icon": "res/icon/icon.png",
	"keywords": [
		"vscode看板娘",
		"看板娘",
		"live2d",
		"canvas"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "vscode-live2d.enabled",
				"title": "启用看板娘"
			},
			{
				"command": "vscode-live2d.enabledGlobal",
				"title": "全局启用看板娘"
			},
			{
				"command": "vscode-live2d.unenabled",
				"title": "停用看板娘"
			},
			{
				"command": "vscode-live2d.unenabledGlobal",
				"title": "全局停用看板娘"
			}
		],
		"configuration": [
			{
				"title": "看板娘配置",
				"type": "Object",
				"properties": {
					"vscode-live2d.enabled": {
						"type": "boolean",
						"default": true,
						"description": "是否启用看板娘"
					},
					"vscode-live2d.model": {
						"type": "string",
						"enum": [
							"shizuku",
							"shizuku-pajama",
							"bilibili-22",
							"bilibili-33"
						],
						"default": "shizuku",
						"description": "选哪个娘"
					}
				}
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}